<%= form_with model: @expenses, url: expenses_path, local: true do |form| %>
  <% @expenses.collection.each do |expense|%>
    <%= fields_for 'expenses[]', expense do |field| %>

      <section class = "row expenses_row">
        <div class="expenses_item col-sm-3">
          <%= field.label :カテゴリ %>
          <%= field.select :category, [
            ["家賃", "家賃"], ["水道光熱費", "水道光熱費"], ["食費", "食費"], ["交際費", "交際費"],
            ["娯楽", "娯楽"],["衣類", "衣類"],["通信費", "通信費"],["交通費", "交通費"],["保険料", "保険料"],["その他", "その他"]
          ] %>
        </div>
        
        <div class="expenses_item col-sm-3">
          <%= field.label :金額 %>
          <%= field.text_field :price %>
        </div>

        <div class="expenses_item col-sm-3">
          <%= field.label :日付 %>
          <%= field.date_select :date, {include_blank: true, use_month_numbers: true} %>
        </div>

        <div class="expenses_item col-sm-3">
          <%= field.label :メモ %>
          <%= field.text_field :memo %>
        </div>
        </br>
      </section>
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>