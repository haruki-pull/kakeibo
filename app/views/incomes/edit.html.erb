<%= form_for(@income) do |fi|%>
  <section class = "row incomes_row">
    <div class = "col-sm-12">
      <div class = "row ">
        <div class="incomes_item col-sm-3">
          <%= fi.label :カテゴリ %>
          <%= fi.select :category, [
          ["給与", "給与"], ["配当", "配当"], ["おこづかい", "おこづかい"],["その他", "その他"]
          ] %>
        </div>
        
        <div class="incomes_item col-sm-3">
          <%= fi.label :金額 %>
          <%= fi.text_field :price %>
        </div>
              
        <div class="incomes_item col-sm-3">
          <%= fi.label :日付 %>
          <%= fi.date_select :date, {include_blank: true, use_month_numbers: true} %>
        </div>

        <div class="incomes_item col-sm-3">
          <%= fi.label :メモ %>
          <%= fi.text_field :memo %>
        </div>
      </div>
    </div>
    <div class = "col-sm-12">
      <div class = "row ">
         <%= fi.submit '更新',class:"incomes_item col-sm-6" %>
        <div class = "incomes_item col-sm-6 text-center"><%= link_to '削除', income_path(@income), method: :delete %></div>
      </div>
    </div>
    </div>
  </section>
<% end %>