<p>検索</p>
<%= form_tag(root_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :name => nil %>
<% end %>

<ul><% @incomes.each do |post| %>
  <li>
    <%= link_to post.title, post %>
    <%= post.created_at %>
    <%= post.status %>
  </li>
  <%= link_to "編集",edit_post_path(post) %>
  <%= link_to "削除",post, method: :delete %>
  <% end %>
</ul>

